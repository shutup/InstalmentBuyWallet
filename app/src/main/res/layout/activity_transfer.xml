<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TransferActivity">

    <include layout="@layout/toolbar"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:text="Available Coin"/>

    <TextView
        android:id="@+id/availableCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        tools:text="0.987654"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/normalMargin"
        android:background="@color/colorBase"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:text="From"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentWalletName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="dgcjy"/>

        <ImageView
            android:id="@+id/selectWallet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_expand_more"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transferWalletAddrText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="dgcjy"/>

        <ImageView
            android:id="@+id/showHideAddrImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:background="@drawable/ic_content_hide"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/normalMargin"
        android:background="@color/colorBase"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:text="To"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/receiveWalletAddrText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:hint="Transfer in account"/>

        <ImageView
            android:id="@+id/scanWalletAddrImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:background="@drawable/ic_scan"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/normalMargin"
        android:background="@color/colorBase"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:layout_marginTop="@dimen/normalMargin"
        android:text="Reward the amount"/>

    <EditText
        android:id="@+id/transferAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/normalMargin"
        android:layout_marginRight="@dimen/normalMargin"
        android:text="Fee is 0.01"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/normalMargin"
        android:background="@color/colorBase"/>

    <Button
        android:id="@+id/transferBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/commonMargin"
        android:text="Reward"
        android:textColor="@color/colorBase"/>
</LinearLayout>